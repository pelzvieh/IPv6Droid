<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Connect, should appear as action button -->
    <item android:id="@+id/action_connect"
          android:icon="@drawable/ic_action_connect"
          android:title="@string/action_connect"
          app:showAsAction="ifRoom" />
    <!-- Disconnect, should appear as action button -->
    <item android:id="@+id/action_disconnect"
          android:icon="@drawable/ic_action_disconnect"
          android:title="@string/action_disconnect"
          app:showAsAction="ifRoom" />
    <!-- Show statistics, should always be in the overflow -->
    <item android:id="@+id/action_show_statistics"
        android:title="@string/action_show_statistics"
        android:orderInCategory="50"
        app:showAsAction="never" />
    <!-- Reload tunnel specs, should always be in the overflow -->
    <item android:id="@+id/action_tic_reload"
        android:title="@string/action_tic_reload"
        android:orderInCategory="50"
        app:showAsAction="never" />
    <!-- Help, should always be in the overflow -->
    <item android:id="@+id/action_help"
        android:title="@string/action_help"
        android:orderInCategory="50"
        app:showAsAction="never" />
    <!-- Subscribe, should always be in the overflow -->
    <item android:id="@+id/action_subscribe"
        android:title="@string/action_subscribe"
        android:orderInCategory="99"
        app:showAsAction="never" />
    <!-- Settings, should always be in the overflow -->
    <item android:id="@+id/action_settings"
        android:title="@string/action_settings"
        android:orderInCategory="100"
        app:showAsAction="never" />
</menu>
